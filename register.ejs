    <script>
      
      function checkPassword(){
        var s1 = document.getElementsByName("password")[0].value;
        var s2 = document.getElementsByName("confirmPassword")[0].value;
        if(s1 != s2){
          alert("Password and Confirm Password must be same.");
          event.preventDefault();
          return false;
        }
      }
    </script>
