  <div class="row">
    <div class="container">
      <form method="post"  action="/user/register">
        <div class="title"> Create Your Account</div>
        <h4>Already have accont?<a href="userLogin"> Login now</a></h4>
        <div class="input-box">
          <h4> Name</h4>
          <input type="text" name="name" placeholder="Enter Your First Name" required>
          <div class="space"></div>
          <div class="rowRegister">
            <div class="col1Register">
                <h4>Age</h4>
                <input type="number" name="ageNumber" placeholder="Enter Your Age" required>
            </div>
            <div class="col2Register">
                <h4>Gender</h4>
                <!-- <input type="number" name="ageNumber" placeholder="Enter Your Gender" required> -->
                <select name="gender">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Others">Others</option>
                </select>
            </div>
          </div>
          <h4>Email</h4>
          <input type="email" name="email" placeholder="Enter Your Email" required>
          <div class="space"></div>
          <h4>Password</h4>
          <input type="password" name="password" placeholder="Create a new password" required>
          <div class="space"></div>
          <h4>Confirm Password</h4>
          <input type="password" name="confirmPassword" placeholder="Retype Password" onchange="checkPassword()" required>
          <div class="space"></div>
          <h4>Occupation</h4>
        
          <!-- <input type="text" name="occupation" placeholder="Enter Your Occupation" required> -->
          <% const occupation = ["none","farmer","student","teacher","lawyer","self-employed","government_official"];
          %>

          <select name="occupation">
            <% for(var i = 0; i<6; i++){ %>
                <option value="<%= occupation[i] %>"><%= occupation[i] %></option>
            <% } %>
          </select>
          <div class="space"></div>
          <h4>Qualification</h4>
          <select name="qualification">
            <% for(var i = 1; i<13 ; i++ ){ 
                if(i == 1){ %>
                  <option value="<%= i %>"><%= i%>st</option>
                <% }else if(i == 2){ %>
                  <option value="<%= i %>"><%= i%>nd</option>
                <% }else if(i==3){ %>
                  <option value="<%= i %>"><%= i%>rd</option>
                <% }else{ %>
                  <option value="<%= i %>"><%= i%>th</option>
                <% }              
             } %>
             <option value="13">Under-Graduate</option>
             <option value="14">Graduate</option>
             <option value="15">Post-Graduate</option>
             <option value="16">Doctrate</option>
          </select>
          <div class="space"></div>
          <h4>Caste</h4>
          <select name="caste">
            <option value="gen">General</option>
            <option value="sc">SC</option>
            <option value="st">ST</option>
            <option value="obc">OBC</option>
          </select>
          <div class="space"></div>
          <h4>Family Income</h4>
          <input type="number" name="income" placeholder="Enter Your Family Income" required>
          <div class="space"></div>
          <h4>State</h4>
          <select name="state">
            <% for(var i = 0; i<result.length; i++){ %>
              <option value="<%= result[i] %>"><%= result[i] %></option>
            <% } %>
          </select>
          <div class="space"></div>
          <input type="submit" name="register" id="register" value="Register">
          <div class="space"></div>
          <div class="space"></div>
        </div>
      </form>
      
